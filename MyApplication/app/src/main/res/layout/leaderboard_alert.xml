<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/leader_alert_icon"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Games Attended:"
        android:textSize="16dp"
        android:id="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/leader_alert_icon"
        android:layout_toEndOf="@+id/leader_alert_icon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Score:"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/leader_alert_icon"
        android:id="@+id/text3"
        android:layout_toEndOf="@+id/leader_alert_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thing:"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/leader_alert_icon"
        android:layout_below="@+id/text3"
        android:layout_toEndOf="@+id/leader_alert_icon"/>

    <!-- RESULTS -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textSize="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/alert_num_attended"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/alert_num_attended"
        android:id="@+id/alert_score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/alert_other"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/alert_score"/>




</RelativeLayout>